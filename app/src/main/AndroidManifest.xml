<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.silverhetch.artemis">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ArtemisApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EntryActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:mimeType="audio/*"
                    android:scheme="content"/>
                <data
                    android:mimeType="video/*"
                    android:scheme="content"/>
            </intent-filter>
        </activity>
        <activity android:name=".UriInputActivity"
                  android:label="@string/input_a_uri"
                  android:theme="@style/Theme.AppCompat.Translucent"
        >
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT"/>
            </intent-filter>
        </activity>
        <activity android:name=".MediaPickerActivity"
                  android:icon="@drawable/ic_folder"
                  android:label="@string/storage"
        />
        <activity android:name=".MediaListActivity" />
        <activity android:name=".devices.DeviceListActivity"/>
        <activity android:name=".devices.browsing.BrowseActivity" />

        <service android:name=".MediaPlayerService"/>
    </application>

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>