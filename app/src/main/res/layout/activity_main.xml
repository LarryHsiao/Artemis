<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".PlayerActivity">

    <SurfaceView
        android:id="@+id/mediaPlayer_display"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/mediaPlayer_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mediaPlayer_controlPanel"
        android:layout_margin="16dp"
        android:max="100"
        app:layout_constraintBottom_toTopOf="@+id/mediaPlayer_controlPanel"
        tools:layout_editor_absoluteX="16dp"
        tools:progress="20"
        tools:secondaryProgress="40" />

    <LinearLayout
        android:id="@+id/mediaPlayer_controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/mediaPlayer_previous"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:drawable/ic_media_previous" />

        <View
            android:id="@+id/mediaPlayer_play"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:drawable/ic_media_play" />

        <View
            android:id="@+id/mediaPlayer_pause"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:drawable/ic_media_pause" />

        <View
            android:id="@+id/mediaPlayer_next"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:drawable/ic_media_next" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>